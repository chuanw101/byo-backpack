{{!-- change password page --}}
<div class="row d-flex justify-content-center">
    <div class="card col-12 col-md-5 col-lg-4 my-5 mx-5">
        <div class="card-body">
            <h2 class="card-title  mt-3 mb-4 text-center">Change Password</h2>
            <form id="changePassword">
                <div class="form-floating my-3">
                    <input type="password" class="form-control" id="currentPassword" placeholder="Current Password">
                    <label for="floatingInput">Current Password</label>
                </div>
                <div class="form-floating">
                    <input type="password" class="form-control" id="newPassword" placeholder="New Password">
                    <label for="floatingPassword">New Password</label>
                </div>
                <div class="form-floating">
                    <input type="password" class="form-control" id="checkNewPassword" placeholder="New Password">
                    <label for="floatingPassword">Retype New Password</label>
                </div>
                <div class="d-grid gap-2 my-3">
                    <button class="cust-btn btn btn-dark" id="newPassBtn" value={{user.id}}>Change Password</button>

                </div>
                <div class="d-grid gap-2 my-3">
                    <button class="btn btn-dark" id="cancelpass">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/js/newPassword.js"></script>