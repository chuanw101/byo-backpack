                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    {{#if user.logged_in}}
                    <li class="nav-item">
                        <a class="nav-link" href="/create_an_event">Create Event</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/profile">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                    {{else}}
                    <li class="nav-item">
                        <a class="nav-link" href="/login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/signup">Signup</a>
