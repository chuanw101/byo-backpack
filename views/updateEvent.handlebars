                    <input class="form-control" id="eventName" value="{{eventUpdate.event_name}}">
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input class="form-control" id="location" value="{{eventUpdate.location}}">
                </div>
                <div class="mb-3">
                    <label for="formFile" class="form-label">Upload Image</label>
                    <input class="form-control" type="file" id="formFile">
                </div>

