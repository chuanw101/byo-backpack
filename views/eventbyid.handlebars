<h3>{{event_name}}</h3>
<p>At {{location}}, created by {{creator.user_name}}</p>
<p>{{date}}</p>
<h4>Stuff to bring:</h4>
<hr>
{{#each items}}
<p>{{comment}}</p>
<p>{{item_name}} ---
    {{#unless user.user_name}}
    <button class="btn btn-secondary brgBtn" value={{id}}>I got this</button>
    {{else}}
    {{user.user_name}}
    {{/unless}}
</p>
<hr>
{{/each}}

<hr>

{{#if user.logged_in}}
<button class="btn btn-dark" id="rsvpBtn" value={{id}}>RSVP</button>
{{/if}}

<script src="/js/eventbyid.js"></script>